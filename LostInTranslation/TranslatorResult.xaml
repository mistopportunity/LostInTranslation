<UserControl
    x:Class="LostInTranslation.TranslatorResult"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LostInTranslation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400" Margin="0,-10,0,20">

	<Grid HorizontalAlignment="Left" Padding="20,0,20,0">
		<Border BorderThickness="0,0,0,1" BorderBrush="black" HorizontalAlignment="Left" VerticalAlignment="Top">
			<TextBlock x:Name="TranslationOrderBlock" Text="" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="25" FontWeight="Normal" Width="{x:Bind TranslationOutputBlock.Width}"></TextBlock>
		</Border>
		<TextBlock x:Name="TranslationOutputBlock" Text="" Margin="0,36,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="30" FontFamily="Times New Roman" TextWrapping="Wrap" IsTextSelectionEnabled="True" FontWeight="Normal" MaxWidth="600" FlowDirection="LeftToRight"/>
	</Grid>

</UserControl>
